<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.3" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clients.ClientsController">
   <items>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Клиенты">
                     <font>
                        <Font name="DejaVu Sans Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <Label fx:id="btnRefresh" text="Обновить" textFill="#271979">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <TextField fx:id="tfFirstName" promptText="Имя">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfLastName" promptText="Фамилия">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfPatronymic" promptText="Отчество">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfPassportNumber" promptText="Серия и номер паспорта">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfPassportData" layoutX="20.0" layoutY="437.0" promptText="Где и когда выдан">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" text="Добавить">
                     <font>
                        <Font name="DejaVu Sans Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnUpdate" mnemonicParsing="false" text="Обновить">
                     <font>
                        <Font name="DejaVu Sans Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <Button fx:id="btnDelete" mnemonicParsing="false" text="Удалить">
               <font>
                  <Font name="DejaVu Sans Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <TableView fx:id="tableClients">
         <columns>
            <TableColumn fx:id="columnFirstName" prefWidth="114.0" text="Имя" />
            <TableColumn fx:id="columnLastName" prefWidth="107.0" text="Фамилия" />
            <TableColumn fx:id="columnPatronymic" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="115.0" text="Отчество" />
            <TableColumn fx:id="columnPassportNumber" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="193.0" text="Серия и номер паспорта" />
            <TableColumn fx:id="columnPassportData" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="184.0" text="Где и когда выдан" />
         </columns>
      </TableView>
   </items>
</SplitPane>
